#!/bin/bash

# gets extension list from file
THIS_EXTENSIONS=$(cat ${HOME}/.config/custom-gnome/gnome-extensions | sed '/^\s*#/d;/^\s*$/d')
# installs each extension from the list
for THIS_EXTENSION in ${THIS_EXTENSIONS}; do
    echo "Installing Gnome extension: ${THIS_EXTENSION}..."
    install-extension ${THIS_EXTENSION}
done
