#!/bin/sh

THIS_CONNECTION_NAME=$(nmcli -t -f NAME c show --active | head -n 1)
THIS_CONNECTION_WIRED=$(echo "$THIS_CONNECTION_NAME" | grep -iq "wired")

THIS_CONNECTION_DATA=""
# detect connection changes
if [ "$THIS_CONNECTION_NAME" == "lo" ]; then
    # if no connection
    THIS_CONNECTION_DATA=""
elif [ ! -z "$THIS_CONNECTION_WIRED" ]; then
    # if wired connection
    THIS_CONNECTION_DATA=""
    THIS_CONNECTION_DATA+="Eth"
    THIS_CONNECTION_DATA+=" "
    THIS_CONNECTION_DATA+=""
else
    # if wireless
    THIS_CONNECTION_DATA=""
    THIS_CONNECTION_DATA+="${THIS_CONNECTION_NAME}"
    THIS_CONNECTION_DATA+=" "
    THIS_CONNECTION_DATA+="󰖩"
fi

export THIS_STATUS_CONNECTION="${THIS_CONNECTION_DATA}"
