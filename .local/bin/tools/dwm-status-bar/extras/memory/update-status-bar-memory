#!/bin/sh

THIS_USED_RAM=$(free -mh --si | awk  {'print $3'} | head -n 2 | tail -1)
THIS_TOTAL_RAM=$(free -mh --si | awk  {'print $2'} | head -n 2 | tail -1)

THIS_MEMORY_DATA=""
THIS_MEMORY_DATA+="${THIS_USED_RAM}"
THIS_MEMORY_DATA+=" / "
THIS_MEMORY_DATA+="${THIS_TOTAL_RAM}"
THIS_MEMORY_DATA+=" "
THIS_MEMORY_DATA+="Ôê∑"

export THIS_STATUS_MEMORY="${THIS_MEMORY_DATA}"
