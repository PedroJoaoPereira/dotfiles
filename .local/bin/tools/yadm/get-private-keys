#!/bin/bash

# checks if secrets repo is cloned
if [ ! -d ${HOME}/.config/dotfiles-secrets ]; then
	cd ${HOME}/.config
	read -p "PedroJoaoPereira/dotfiles-secrets API access token: " THIS_API_TOKEN
	git clone https://${THIS_API_TOKEN}@github.com/PedroJoaoPereira/dotfiles-secrets.git
fi

# updates repo
cd ${HOME}/.config/dotfiles-secrets
git fetch origin
git pull
